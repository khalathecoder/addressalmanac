<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContactPro_Crucible</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- BOOTSTRAP icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Allan:wght@400;700&family=Bebas+Neue&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContactPro_Crucible.styles.css" asp-append-version="false" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if(!User.Identity!.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ContactPro</a>
                }
                else
                {
                    <a class="navbar-brand nav-link dropdown-toggle" data-bs-toggle="dropdown">ContactPro</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Index">My Contacts</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">My Categories</a>
                    </div>

                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-doorfill"></i></a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="content" id="mainHero">
        <section class="container h-100">
            @RenderBody()
        </section>
    </div>

    <footer class="border-top footer text-muted">
        <div class=" footer-main py-3 row row-cols-1 row-cols-md-3 align-items-center text-center gy-3">
            <div class="col">
                <img src="/img/kw-black-initials.png" height="50" />
            </div>
            <div class="col text-dark text-md-end px-3">
                <a href="https://linkedin.com" class="text-light" target="blank"><i class="socialicons bi bi-linkedin p-2"></i></a>
                <a href="https://github.com" class="text-light" target="blank"><i class="socialicons bi bi-github p-2"></i></a>
                <a href="https://twitter.com" class="text-light" target="blank"><i class="socialicons bi bi-twitter p-2"></i></a>
            </div>
            <div class="col text-dark order-md-first text-md-start px-3"> &copy; 2023 Khala Wright</div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
