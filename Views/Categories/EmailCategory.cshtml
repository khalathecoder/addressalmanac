@model ContactPro_Crucible.Models.EmailData

<style>
	.ck-editor__editable_inline {
		min-height: 400px;
	}
</style>

<h1 class="mt-5">Email Category: @Model.GroupName</h1>
<div class="p-2">
	<form asp-action="EmailCategory" asp-controller="Categories" method="post">
		<input type="hidden" asp-for="GroupName" /> @*Refernce the Group Name*@
		<div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
			<div class="col col-md-12">
				<label asp-for="EmailAddress" class="form-label">To:</label> @* Refence the EmailData's email address*@
				<textarea class="form-control" asp-for="EmailAddress" rows="3"></textarea> @* Refence the EmailData's email address*@
				
			</div>
		</div>
		<div class="row row-cols-1 g-3">
			<div class="col">
				<label asp-for="EmailSubject" class="form-label">Subject:</label> @* Refence the EmailData's email subject*@
				<input type="text" class="form-control" asp-for="EmailSubject" /> @* Refence the EmailData's email subject*@
				
			</div>
			<div class="col">
				<label asp-for="EmailBody" class="form-label">Message:</label> @* Refence the EmailData's email body*@
				<textarea class="form-control editor" rows=10 asp-for="EmailBody" required></textarea> @* Refence the EmailData's email body*@
			</div>
			<div class="col text-end">
				<button class="btn btn-primary rounded-pill btnlinks" type="submit">Send</button>
			</div>
		</div>
	</form>
</div>

@section scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<!--CK Editor-->
	<script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>
	<script>
		ClassicEditor
			.create(document.querySelector('.editor'), {
				licenseKey: '',
			})
			.then(editor => {
				window.editor = editor;
			});
	</script>
}